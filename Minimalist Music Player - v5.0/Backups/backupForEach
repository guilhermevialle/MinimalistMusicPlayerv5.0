    addMusicBoxInput.forEach((item) => {
        if (item.value == '') {
            addMusicsBox.classList.add('addMusicsBoxInvalidValues')            
        }
        const addMusicsBoxInvalidValues = document.querySelector('.addMusicsBoxInvalidValues')
        if (addMusicsBoxInvalidValues) {
            addMusicsBoxInvalidValues.addEventListener('animationend', (e) => {
                if (e.animationName == 'vibrar'){
                    addMusicsBoxInvalidValues.classList.remove('addMusicsBoxInvalidValues')
               } 
            },false)
        }
        else {
            AddInMainArray(nomeDaMusicaFileCreated, musicFunc(), imgFunc(), autorFileCreated)
            addMusicInMiniatura(nomeDaMusicaFileCreated, imgFunc(), autorFileCreated)
        }
    })

    // ----- CODIGO QUBRANDO A APLICAÇÃO ------